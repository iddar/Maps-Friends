.hero-unit
	padding 30px 60px

#mapcontiner
	width 100%
	max-width 100%

#map
	width 100%
	height 0
	padding-bottom 60%

.full
	top 0
	left 0
	right 0
	bottom 0
	width 100% !important
	height 100% !important
	margin 0
	padding 0
	position absolute !important
	z-index 10
	padding-bottom 0 !important

.btmin
	position absolute
	bottom 20px
	left 20px
	z-index 20
	-moz-transform:scale(2.0,2.0); /* Firefox */
	-webkit-transform:scale(2.0,2.0); /* Safari and Chrome */

.sidebar-nav
	padding 9px 0


@media (max-width: 980px)  
	.navbar-text.pull-right 
		float none
		padding-left 5px
		padding-right 5px

@media (max-width: 480px)
	body
		padding-left 0
		padding-right 0
	.hero-unit
		padding 10px
